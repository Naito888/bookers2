<!--本の詳細-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <!--ユーザー情報（部分テンプレート）-->
      <%= render "users/userinfo",user:@user %>
    

      <!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book,local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, id:"book_title", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, rows:'2', id:"book_opinion", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book",class:"btn btn-success" %>
        </div>
      <% end %>
      
      
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        
        <!--実データ-->
        <table class="table">
            <tbody>
              <tr>
                <td>
                    <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag @user.profile_image, size: '100x100' if @user.profile_image.attached? %>
                    <%= @book.user.name %>
                    <% end %>
                </td>
                <td>
                  <%= link_to @book.title %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <!--編集(edit)-->
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Edit",edit_book_path(@book.user_id),class:"btn btn-success" %>
                  <% end %>
                </td>
                <!--削除(destroy)-->
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Destroy",book_path(@book.user_id),method: :delete,class:"btn btn-danger", data: {confirm: "本当に消しますか？"} %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
    </div>
    
  </div>
</div>