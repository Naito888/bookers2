<!--ユーザプロフィール編集-->

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <%= form_with model:@user, local:true do |f| %>
      <h2>User info</h2>
      
       <!--エラーメッセージ-->
      <%= render "users/error_message" %>
      
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"user_name", class: 'form-control name'%>
        </div>
        
        <div class="form-group">
          <label for="user_image">Image</label><br />
          <%= image_tag @user.profile_image, size: '60x60' if @user.profile_image.attached? %>
          <%= f.file_field :profile_image %>
        </div>
        
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, rows:'2', id:"user_introduction", class: 'form-control introduction' %>
        </div>
        
        <div class="form-group">
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
        </div>
        <% end %>
    </div>
  </div>  
</div>
