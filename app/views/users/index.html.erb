<!--ユーザ一覧-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <!--ユーザー情報（部分テンプレート）-->
      <%= render "users/userinfo",user:@user %>
    
    


      <!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book,local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, id:"book_title", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, rows:'2', id:"book_opinion", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book",class:"btn btn-success" %>
        </div>
      <% end %>
      
      
    </div>
    
    <!--ユーザー一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <!--実データ-->
          <% @users.each do |a_user| %>
          <tr>
            <td>
              <% if a_user.profile_image.attached? %>
                <%= image_tag a_user.profile_image, size: '80x80' %>
              <% else %>
                <%= image_tag 'no_image.jpg' %>
              <% end %>
            </td>
            <td><%= a_user.name %></td>
            <td><%= link_to "Show", user_path(a_user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>